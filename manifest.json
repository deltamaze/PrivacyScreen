{
    "manifest_version": 2,
  
    "name": "Privacy Screen",
    "description": "Black out screen while mouse not hovering over/not active window",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "options_page": "options.html",

    "permissions": [
     "activeTab",
     "storage"
     ],
     "content_scripts": [{
      "css": ["styles.css"],
      "js": ["jquery.js", "content.js"],
      "matches": ["<all_urls>"]
    }]
  }